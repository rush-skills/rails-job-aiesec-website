<div class="container center">
<div class= "col-md-4 center col-md-offset-4">
	<h1>Log in</h1><br/>
	<%= form_tag(:action => 'login_attempt') do %>
		<p> <%= text_field_tag(:username_or_email,nil,{:class => "form-control",:placeholder => "Username",:required => true, :autofocus => true}) %>
		</p> 
		
		<p><%= password_field_tag :login_password,nil,{:class => "form-control",:placeholder => "Password",:required => true} %>
		</p> 
		<br/>
		<%= submit_tag("Log In",:class => "btn btn-primary") %>
	<% end %>
</div>
</div>