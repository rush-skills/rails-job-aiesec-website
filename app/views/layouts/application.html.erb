<!DOCTYPE html>
<html>
<head>
  <title>Title</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="Main_Header">
		<h1>Title</h1>
		<%if ! session[:user_id]%>
			<ul class="nav">
				<li><%= link_to :Signup , :signup, class: "nav_links"%></li>|
				<li><%= link_to :Login , :login, class: "nav_links"%></li>	
			</ul>
		<%elsif User.find(session[:user_id]).is_admin == 1%>
			<ul class="nav">
				<li><%= link_to :Home , :admin, class: "nav_links" %> |</li>
				<li><%= link_to :Jobs , :jobs, class: "nav_links" %> |</li>
				<li><%= link_to :Logout , :logout, class: "nav_links" %></li>	
			</ul>
		<%else%>
			<ul class="nav">
				<li><%= link_to :Home , :home, class: "nav_links" %> |</li>
				<li><%= link_to :Profile , :profile, class: "nav_links" %> |</li>
				<li><%= link_to :Jobs , :jobs_user, class: "nav_links" %> |</li>
				<li><%= link_to :Logout , :logout, class: "nav_links" %></li>	
			</ul>
		<%end%>
	</div>
	<% if flash[:color]== "valid" %>
		<div class="valid_notice">
			<p><%= flash[:notice]%></p>
		</div>
	<% elsif flash[:color]== "invalid"%>
		<div class="invalid_notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%else%>
		<div class="notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%end%>
<%= yield %>

</body>
</html>
