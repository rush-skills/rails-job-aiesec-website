<p id="notice"><%= notice %></p>
<% if @job.status != 1 || current_user.is_admin %>

<div>

  <h1>Project Name: <%= @job.project_name %></h1>

</div>

<div >
    <h3>Job Country: <%= @job.country %></h3>
</div>

<div >
    <h3> Dates <%= @job.start_date %> -  <%= @job.end_date %> </h3>
</div>

<div >
  <h3><strong>Brief Description</strong>:<br/> <%= @job.brief_description %></h3>
</div>


<div >
  <h3><strong>Work Description</strong>: <%= @job.work_information %></h3>
</div>

<div >
  <h3><b>Language:</b>
  <%= @job.language %></h3>
</div>
<div >
  <h3><b>Other details:</b>
  <%= @job.other_details %></h3>
</div>
<% else %>
<p> The job you are looking for does not exist or has been removed from by the admin </p>
<% end %>
<% if @current_user.is_admin %>
<p> Status = <% if @job.status == 1 %> Deleted Job <% else %> Active Job <% end %> </p>
<%= link_to 'Back', :controller => "jobs", :action => "index" %>
<% if @job.status == 1 %>
<%= link_to 'Restore Delted Job', :controller => "jobs", :action => "restore" ,id: @job.id%>
<% end %>
<% else %>
<%= link_to 'Back', :controller => "jobs", :action => "index_user" %>
<% end %>
